<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1173BB"
    android:clickable="true"
    android:orientation="vertical"
    android:scrollbars="vertical"
    tools:ignore="HardcodedText,InefficientWeight" >

    <TextView
        android:id="@+id/clave2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="1dp"
        android:text="GGGGG-CCC-AAAAA-II-SS"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:gravity="center" >

        <TextView
            android:id="@+id/encabezado"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="No Asistio"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/encabezado2"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="No Pago"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/encabezado3"
            android:layout_width="47dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:padding="0dp"
            android:layout_gravity="top"
            android:text="No Ahorro"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/encabezado4"
            android:layout_width="55dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:padding="0dp"
            android:layout_gravity="top"
            android:text="No Solidario"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <!--<TextView
            android:id="@+id/encabezado5"
            android:layout_width="45dp"
            android:layout_height="36dp"
            android:padding="0dp"
            android:text="@string/vacio"
            android:textColor="#ffffff"
            android:textSize="12sp" />-->
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_gravity="top"
        android:layout_weight="0.21"
        android:background="#1173BB" >

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:columnWidth="150dp"
            android:isScrollContainer="true"
            android:orientation="vertical"
            android:scrollbars="vertical" >
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#1173BB"
        android:gravity="bottom"
        android:padding="2dp" >

        <Button
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Anterior" />

        <Button
            android:id="@+id/next"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Continuar" />
    </LinearLayout>

</LinearLayout>