<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:titleTextColor="@android:color/white"
        android:background="#1976D2">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/done_text_color_dark_normal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/nombreLabel"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Bienvenido "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorTitleLabel"
            android:textSize="30dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_weight="0.1"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/cerrarBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


        <Button
            android:id="@+id/reprogBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.2"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Reprogramar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/guardarBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:hint="Digite el NÃºmero de Grupo"
        android:paddingTop="20dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/numeroTxt"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionNext" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:hint="Digite el Monto del Grupo"
        android:paddingTop="20dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">
        <EditText
            android:id="@+id/montoTxt"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionNext" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:hint="Digite la cantidad de Integrantes"
        android:paddingTop="20dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/integrantesTxt"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:inputType="number"
            android:imeOptions="actionNext" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="vertical"
        android:paddingTop="30dp">
        <TextView
            android:id="@+id/desembolsoLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="Fecha y Hora de Desembolso"
            android:textSize="21dp"
            android:textColor="#00508C"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/fechaTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:imeOptions="actionNext" />

        <TextView
            android:id="@+id/horaTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0.6"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:imeOptions="actionNext" />
    </LinearLayout>






</LinearLayout>




