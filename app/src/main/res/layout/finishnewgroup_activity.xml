<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="116dp"

        android:paddingTop="30dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:gravity="center"
        android:text="¡Felicidades!"
        android:textColor="@color/colorTitleLabel"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/lblClients"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:gravity="center"
        android:text="Has agregado 12 clientes más a tu cartera..."
        android:textColor="#00508C"
        android:textSize="30dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/hands" />

        <LinearLayout
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:background="#FFFFFF"
            android:paddingTop="20dp"
            android:gravity="center">
        <Button
            android:id="@+id/btnNewGroups"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:text="ir a Nuevo Grupos"
            android:background="@drawable/itemedittext"
            android:textColor="#ffffff"
            android:textSize="20dp"/>
        </LinearLayout>

</LinearLayout>