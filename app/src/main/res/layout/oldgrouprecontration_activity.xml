<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:titleTextColor="#00508C"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textColor="#00508C"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/done_text_color_dark_normal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/nombreLabel"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Bienvenido "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorTitleLabel"
            android:textSize="18dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


        <Button
            android:id="@+id/reprogBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.2"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Reprogramar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
    android:id="@+id/llIntegrant"
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:hint="Total de integrantes estimado:"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:visibility="invisible">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:text="Total de integrantes:"
        android:paddingTop="17dp"
        android:textColor="#00508C"
        />

    <EditText
        android:id="@+id/integrantesTxt"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/edittext"
        android:ems="2"
        android:hint="0"
        android:imeOptions="actionNext"
        android:textColorHint="#00508C"
        android:inputType="number"
        android:textAlignment="center"
        android:singleLine="true" />
</LinearLayout>


    <LinearLayout
        android:id="@+id/llNews"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:hint="Total de integrantes estimado:"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/lblNewIntegrants"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:text="Nuevos:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />

        <EditText
            android:id="@+id/txtNewIntegrants"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext"
            android:ems="2"
            android:hint="0"
            android:imeOptions="actionNext"
            android:textColorHint="#00508C"
            android:inputType="number"
            android:textAlignment="center"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llRecontratation"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:hint="Total de integrantes estimado:"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/lblRecIntegrants"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:text="Recontratados:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />

        <EditText
            android:id="@+id/txtRecIntegrants"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext"
            android:ems="2"
            android:hint="0"
            android:imeOptions="actionNext"
            android:textColorHint="#00508C"
            android:inputType="number"
            android:textAlignment="center"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llAmount"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:hint="Monto grupal solicitado"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:paddingTop="18dp"
            android:text="Monto grupal solicitado:"
            android:textColor="#00508C" />

        <EditText
            android:id="@+id/montoTxt"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edittext"
            android:hint="0.00"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHint="#00508C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llDate"
        android:visibility="invisible">

        <TextView
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:text="Fecha estimada de Visto Bueno:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />

        <TextView
            android:id="@+id/fechaTxt"
            android:layout_width="113dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext"
            android:imeOptions="actionNext"
            android:paddingTop="17dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#00508C"
            android:textColorHint="#00508C" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDateReprogram"
        android:layout_width="fill_parent"
        android:layout_height="126dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="348dp"
            android:layout_height="65dp"
            android:paddingTop="17dp"
            android:text="Fecha de reprogramacion de Inicio de RecontrataciÃ³n:"
            android:textColor="#00508C" />

        <TextView
            android:id="@+id/fechaReprogram"
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext"
            android:imeOptions="actionNext"
            android:paddingTop="17dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#00508C"
            android:textColorHint="#00508C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/llmotivecancel"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="Motivo:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />
        <Spinner
            android:id="@+id/spinnermotivecancel"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:entries="@array/recontratationCancelItems"
            android:textColorHint="#00508C"
            android:textAlignment="center"
            android:background="@drawable/edittext"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/btnSave">

        <ImageView
            android:id="@+id/guardarGpoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:text="Guardar"
            android:background="#FFFFFF"
            android:src="@drawable/iconsave" />
    </LinearLayout>


</LinearLayout>




