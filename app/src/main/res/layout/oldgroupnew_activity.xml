<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:titleTextColor="#00508C"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textColor="#00508C"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <ImageView
            android:id="@+id/guardarGpoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:text="Guardar"
            android:background="#FFFFFF"
            android:src="@drawable/iconsave" />

    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        android:hint="Numero de grupo"
        android:textColorHint="#00508C"
        android:paddingTop="10dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/nombreContactoTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.00"
            android:background="@drawable/edittext"
            android:imeOptions="actionNext"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:background="#FFFFFF"
        android:textColorHint="#00508C"
        android:hint="Nombre del grupo"
        android:paddingTop="10dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/telContactoTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.00"
            android:background="@drawable/edittext"
            android:imeOptions="actionNext"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="68dp"
        android:background="#FFFFFF"
        android:textColorHint="#00508C"
        android:hint="Ciclo anterior"
        android:paddingTop="10dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/refContactoTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.00"
            android:background="@drawable/edittext"
            android:imeOptions="actionNext"
            android:inputType="text" />
    </android.support.design.widget.TextInputLayout>


</LinearLayout>