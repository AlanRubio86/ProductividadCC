<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:titleTextColor="#00508C"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textColor="#00508C"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/done_text_color_dark_normal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/nombreLabel"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Bienvenido "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorTitleLabel"
            android:textSize="18dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


        <Button
            android:id="@+id/reprogBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.2"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Reprogramar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/llIntegrant"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:hint="Cantidad de Integrantes"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:textColorHint="#00508C"
        android:visibility="invisible"
        app:errorTextAppearance="@drawable/edittext"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/editIntegrantes"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:ems="2"
            android:textColor="#00508C"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColorHint="#00508C"
            android:textColorLink="#00508C"
            android:textCursorDrawable="@drawable/edittextcursor"/>


    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/llAmountGeneral"
        android:visibility="invisible">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/llAmount"
            android:layout_width="159dp"
            android:layout_height="65dp"
            android:hint="Monto grupal"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:textColorHint="#00508C"
            android:visibility="invisible"
            app:errorTextAppearance="@drawable/edittext"
            app:hintTextAppearance="@style/AppTheme.TextInputLayout">

            <EditText
                android:id="@+id/editAmount"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:singleLine="true"
                android:textAlignment="textEnd"
                android:textColor="@color/colorPrimaryLabels"
                android:textColorHint="@color/colorPrimaryLabels"
                android:textColorLink="@color/colorPrimaryLabels"
                android:textCursorDrawable="@drawable/edittextcursor"
                android:textSize="20dp" />


        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/ceros"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:paddingTop="19dp"
            android:text="000.00"
            android:textColor="@color/colorPrimaryLabels"
            android:textSize="20dp" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llDate"
        android:hint="Fecha estimada de desembolso"
        android:visibility="invisible"
        android:textColorHint="#00508C"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout"
        app:errorTextAppearance="@drawable/edittext">

        <EditText
            android:id="@+id/editEstimated"
            android:layout_width="289dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:paddingTop="17dp"
            android:background="@drawable/edittext"
            android:singleLine="true"
            android:textColor="#00508C"
            android:textColorHint="#00508C"
            android:imeOptions="actionNext"
            android:textColorLink="#00508C"
            android:textAlignment="center"
            android:focusable="true"
            android:clickable="true"
            android:inputType="date"/>

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/lldispersion"
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:hint="Tipo de dispersion:"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:textColorHint="#00508C"
        android:visibility="invisible">

        <TextView
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Tipo de dispersión."
            android:textColor="#00508C" />

        <Spinner
            android:id="@+id/spnDispersion"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:spinnerMode="dialog"
            android:focusable="true"
            android:textAlignment="center"
            android:textColorHint="#00508C" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/llDateReprogram"
        android:visibility="invisible"
        android:hint="Fecha de reprogramación de VoBo"
        android:textColorHint="#00508C"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout"
        app:errorTextAppearance="@drawable/edittext">

        <EditText
            android:id="@+id/editReprogram"
            android:layout_width="317dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext"
            android:focusable="false"
            android:imeOptions="actionNext"
            android:paddingTop="17dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#00508C"
            android:textColorHint="#00508C" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/llmotive"
        >

        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Motivo:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />
        <Spinner
            android:id="@+id/spnMotiveReprogram"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:spinnerMode="dialog"
            android:textAlignment="center"
            android:textColorHint="#00508C"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="109dp"
        android:orientation="vertical"
        android:visibility="invisible"
        android:id="@+id/llmotivecancel">

        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:text="Motivo:"
            android:paddingTop="17dp"
            android:textColor="#00508C" />
        <Spinner
            android:id="@+id/spnCancelMotive"
            android:layout_width="249dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:textColorHint="#00508C"
            android:textAlignment="center"
            android:background="@drawable/edittext"
            style="@style/Widget.AppCompat.Spinner.Underlined"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/btnSave">

        <ImageView
            android:id="@+id/guardarGpoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:text="Guardar"
            android:background="#FFFFFF"
            android:src="@drawable/iconsave" />
    </LinearLayout>


</LinearLayout>




