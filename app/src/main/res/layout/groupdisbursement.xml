<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:titleTextColor="#00508C"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Toolbar Title"
            android:textColor="#00508C"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/done_text_color_dark_normal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/nombreLabel"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="Bienvenido "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorTitleLabel"
            android:textSize="18dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:paddingBottom="10dp">

        <Button
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Continuar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />


        <Button
            android:id="@+id/reprogBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.2"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Reprogramar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="0.25"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llIntegrant"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:hint="Cantidad de Integrantes"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Total de integrantes:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />

        <EditText
            android:id="@+id/integrantesTxt"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:ems="2"
            android:hint="0"
            android:imeOptions="actionNext"
            android:textColorHint="#00508C"
            android:inputType="number"
            android:textAlignment="center"
            android:singleLine="true" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:hint="Monto Autorizado"
        android:paddingTop="10dp"
        android:id="@+id/llAmount"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingTop="17dp"
            android:text="Monto grupal a otorgar:"
            android:textColor="#00508C" />

        <EditText
            android:id="@+id/montoTxt"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:hint="0.00"
            android:textColorHint="#00508C"
            android:imeOptions="actionNext"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/llgrouptype"
        >

        <TextView
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:paddingTop="17dp"
            android:text="Tipo de grupo:"
            android:textColor="#00508C" />

        <Spinner
            android:id="@+id/spinnerGrouptype"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:entries="@array/groupTypeItems"
            android:textAlignment="center"
            android:textColorHint="#00508C" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/llMotiveReprogram"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:paddingTop="17dp"
            android:text="Motivo:"
            android:textColor="#00508C" />

        <Spinner
            android:id="@+id/spnMotiveReprogram"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext"
            android:entries="@array/reprogramItemsDisbursement"
            android:textAlignment="center"
            android:textColorHint="#00508C" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="fill_parent"
        android:layout_height="73dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:visibility="invisible">

        <TextView
            android:layout_width="172dp"
            android:layout_height="50dp"
            android:paddingTop="17dp"
            android:singleLine="false"
            android:text="Fecha de reprogramacion de desembolso:"
            android:textColor="#00508C"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/fechaTxt"
            android:layout_width="120dp"
            android:layout_height="51dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/edittext"
            android:imeOptions="actionNext"
            android:paddingTop="17dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="#00508C"
            android:textColorHint="#00508C" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:id="@+id/llCancelMotive"
        >

        <TextView
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:text="Motivo:"
            android:paddingTop="17dp"
            android:textColor="#00508C"
            />
        <Spinner
            android:id="@+id/spnCancelMotive"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:entries="@array/cancelMotiveItems"
            android:textColorHint="#00508C"
            android:textAlignment="center"
            android:background="@drawable/edittext"
            style="@style/Widget.AppCompat.Spinner.Underlined"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="invisible"
        android:id="@+id/btnSave">

        <ImageView
            android:id="@+id/guardarGpoBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:scaleType="centerCrop"
            android:text="Guardar"
            android:background="#FFFFFF"
            android:src="@drawable/iconsave" />
    </LinearLayout>


</LinearLayout>




