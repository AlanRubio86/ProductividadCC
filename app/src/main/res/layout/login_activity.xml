<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:paddingBottom="30dp"
        android:paddingTop="50dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_weight="0.02"
        android:background="#ffffff"
        android:paddingTop="20dp"
        android:text="Asistente CrediClub 3.0"
        android:textAlignment="center"
        android:textColor="@color/colorTitleLabel"
        android:textSize="26sp" />



    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_weight="0.1"
        android:background="#FFFFFF"
        android:textColorHint="#00508C"
        android:hint="Número de empleado"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/numTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#00508C"
            android:textColorLink="#00508C"
            android:textCursorDrawable="@drawable/edittextcursor"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:layout_weight="0.03"
        android:background="#FFFFFF"
        android:hint="Contraseña"
        android:textColorHint="#00508C"
        android:paddingTop="10dp"
        app:hintTextAppearance="@style/AppTheme.TextInputLayout">

        <EditText
            android:id="@+id/passTxt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/edittext"
            android:inputType="numberPassword"
            android:singleLine="true"
            android:textColor="#00508C"
            android:textColorLink="#00508C"
            android:textCursorDrawable="@drawable/edittextcursor"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_weight="0.03"
        android:background="#FFFFFF"
        android:paddingTop="5dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:background="#FFFFFF"
        android:paddingTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:background="@drawable/itemedittext"
            android:gravity="center"
            android:text="Entrar"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:background="#FFFFFF">

    </LinearLayout>

</LinearLayout>